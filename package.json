{
  "name": "flyweight",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "./bin/webpack-dev-server",
    "test:unit": "TODO",
    "test:e2e": "rails cypress:open",
    "docs:generate": "npx typedoc --out docs src",
    "ci:e2e": "rails cypress:run --record --key TODO",
    "ci:unit": "yarn run test:unit"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@hotwired/turbo": "^7.0.0-beta.4",
    "@hotwired/turbo-rails": "^7.0.0-beta.5",
    "@rails/webpacker": "5.2.1",
    "css-loader": "^5.2.0",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "date-fns": "^2.19.0",
    "flatpickr": "^4.6.9",
    "mini-css-extract-plugin": "^1.3.9",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "stimulus": "^2.0.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "cypress": "^6.8.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "start-server-and-test": "^1.12.1",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "webpack-dev-server": "^3.11.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx eslint --fix"
    ],
    "*.css": [
      "npx stylelint --fix"
    ],
    "*.scss": [
      "npx stylelint --fix --syntax scss"
    ],
    "*.sass": [
      "npx stylelint --fix --syntax sass"
    ]
  }
}
